<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_restaurant_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorAccent"
        android:contentDescription="@string/restaurant_detail_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_restaurant_informations"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_restaurant_image" />

    <TextView
        android:id="@+id/activity_restaurant_text_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/restaurant"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_restaurant_informations" />

    <TextView
        android:id="@+id/activity_restaurant_text_adress"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/address"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/activity_restaurant_informations"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/activity_restaurant_star_1"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@+id/activity_restaurant_text_restaurant_name"
        app:layout_constraintTop_toTopOf="@+id/activity_restaurant_informations" />

    <ImageView
        android:id="@+id/activity_restaurant_star_2"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@+id/activity_restaurant_star_1"
        app:layout_constraintTop_toTopOf="@+id/activity_restaurant_informations" />

    <ImageView
        android:id="@+id/activity_restaurant_star_3"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@+id/activity_restaurant_star_2"
        app:layout_constraintTop_toTopOf="@+id/activity_restaurant_informations" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_restaurant_participation_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_check"
        app:layout_constraintEnd_toEndOf="@+id/activity_restaurant_image"
        app:layout_constraintTop_toTopOf="@+id/activity_restaurant_image" />

    <ImageView
        android:id="@+id/activity_restaurant_call_logo"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_restaurant_informations" />

    <ImageView
        android:id="@+id/activity_restaurant_like_logo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_star_orange"
        app:layout_constraintEnd_toStartOf="@+id/activity_restaurant_web_logo"
        app:layout_constraintStart_toEndOf="@+id/activity_restaurant_call_logo"
        app:layout_constraintTop_toBottomOf="@+id/activity_restaurant_informations" />


    <ImageView
        android:id="@+id/activity_restaurant_web_logo"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:src="@drawable/ic_web"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_restaurant_informations" />

    <TextView
        android:id="@+id/activity_restaurant_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/call"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/activity_restaurant_call_logo"
        app:layout_constraintStart_toStartOf="@+id/activity_restaurant_call_logo"
        app:layout_constraintTop_toBottomOf="@+id/activity_restaurant_like_logo" />

    <TextView
        android:id="@+id/activity_restaurant_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/like"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/activity_restaurant_like_logo"
        app:layout_constraintStart_toStartOf="@+id/activity_restaurant_like_logo"
        app:layout_constraintTop_toBottomOf="@+id/activity_restaurant_like_logo" />

    <TextView
        android:id="@+id/activity_restaurant_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/website"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/activity_restaurant_web_logo"
        app:layout_constraintStart_toStartOf="@+id/activity_restaurant_web_logo"
        app:layout_constraintTop_toBottomOf="@+id/activity_restaurant_like_logo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_restaurant_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_restaurant_like"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>